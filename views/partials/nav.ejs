                background-color: var(--card-color);
            }
    
            .nav-item a,
            .logo,
            .tooltip {
                color: var(--text-color);
            }
    
            button {
                background-color: var(--primary-color);
            }
    
            /* Toggle Switch */
            .theme-toggle {
                cursor: pointer;
                margin-left: 1rem;
            }
    
            .toggle-slider {
                width: 50px;
                height: 24px;
                background-color: var(--primary-color);
                border-radius: 30px;
                position: relative;
                transition: background-color 0.3s ease;
            }
    
            .toggle-slider .dot {
                width: 20px;
                height: 20px;
                background: #fff;
